---
import NavLink from "@/components/navigation/nav-link.astro";

interface Props {
	class?: string;
	href: URL | string;
}

const { class: className, ...rest } = Astro.props;
---

<NavLink
	{...rest}
	class:list={[
		"rounded inline-flex w-full px-4 py-2.5 text-xs uppercase transition hover:bg-neutral-50 hover:text-brand-red",
		className,
	]}
	data-nav-menu-item
>
	<slot />
</NavLink>
