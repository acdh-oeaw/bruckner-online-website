---
import { Image } from "astro:assets";

import { getImageImport } from "@/lib/get-image-import";

interface Props {
	alt?: string;
	href: string;
}

const { alt = "", href } = Astro.props;
---

<figure>
	{/* @ts-expect-error Upstream type error. */}
	<Image alt={alt} src={getImageImport(href)} />
	<figcaption>
		<slot />
	</figcaption>
</figure>
