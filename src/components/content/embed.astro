---
interface Props {
	src: string;
	/** Added by `@acdh-oeaw/mdx-lib#with-iframe-titles`. */
	title?: string;
}

const { src, title } = Astro.props;
---

<figure class="relative min-h-screen-lg">
	<iframe
		allowfullscreen
		class="absolute inset-0 size-full overflow-y-auto overflow-x-hidden rounded-md"
		src={src}
		title={title ?? "Iframe"}></iframe>
	{
		Astro.slots.has("default") ? (
			<figcaption>
				<slot />
			</figcaption>
		) : null
	}
</figure>
