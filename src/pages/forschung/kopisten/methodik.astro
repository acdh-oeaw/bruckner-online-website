---
import { readFileSync } from "fs";

import { defaultLocale, type Locale } from "@/config/i18n.config";
import KopistenLayout from "@/layouts/kopisten-layout.astro";
import PageLayout from "@/layouts/kopisten-page-layout.astro";
import { createI18n } from "@/lib/i18n";

const locale = (Astro.currentLocale ?? defaultLocale) as Locale;

const { t } = await createI18n((Astro.currentLocale ?? defaultLocale) as Locale);

const html = readFileSync(`src/edition/meta/methodology.html`, "utf-8");
---

<PageLayout
	locale={locale}
	title={`${t("KopistenMeta.title")}: ${t("KopistenNav.links.methodology")}`}
>
	<KopistenLayout title="" languageToggle={true}>
		<Fragment set:html={html} />
	</KopistenLayout>
</PageLayout>
