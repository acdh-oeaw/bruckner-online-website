---
import NavLink from "@/components/navigation/nav-link.astro";

interface Props {
	class?: string;
	href: URL | string;
	reload?: boolean;
}

const { class: className, ...rest } = Astro.props;
---

<NavLink
	{...rest}
	class:list={[
		"rounded inline-flex px-4 py-2 text-sm font-semibold uppercase transition hover:text-brand-red",
		className,
	]}
	data-nav-link
>
	<slot />
</NavLink>
